{
"compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
        "@/*": ["src/*"]
    }
},
"include": ["src/**/*.ts"],
"exclude": ["node_modules"]
}
