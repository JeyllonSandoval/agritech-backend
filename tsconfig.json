{
"compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
    "@/*": ["./*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "rootDir": "src"
},
"include": ["src/**/*"],
"exclude": ["node_modules", "dist"]
}